    <script>
        // Efeitos interativos
        document.querySelectorAll('.plan-card').forEach(card => {
            card.addEventListener('mouseenter', () => {
                if (!card.classList.contains('transform', 'scale-105')) {
                    card.classList.remove('transform');
                    card.classList.remove('scale-100');
                    card.classList.add('transform');
                    card.classList.add('hover:scale-105');
                }
            });

            card.addEventListener('mouseleave', () => {
                if (!card.classList.contains('transform', 'scale-105')) {
                    card.classList.remove('hover:scale-105');
                }
            });

            card.querySelector('button').addEventListener('click', () => {
                const planName = card.querySelector('h3').textContent;
                alert(`Você selecionou o ${planName}! Entraremos em contato para finalizar sua assinatura.`);
            });
        });
    </script>
